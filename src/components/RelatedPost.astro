---
import { slugify } from '../utils/functions'
import type { post } from '../utils/type'
import PostVerticalCard from './PostVerticalCard.astro'
type Props = {
  frontmatter: { data: post }[]
}

const { frontmatter } = Astro.props
---

<section class='py-4'>
  <h3 class='mb-2 font-semibold text-lg'>Related post:</h3>
  <div class='w-full flex items-center flex-wrap gap-4 md:gap-x-4 py-4'>
    {
      frontmatter.map(p => (
        <PostVerticalCard
          title={p.data.title}
          image={p.data.image}
          url={slugify(p.data.title)}
          description={p.data.description}
          tags={p.data.tags}
          author={p.data.author}
          date={p.data.date}
          draft={p.data.draft}
        />
      ))
    }
  </div>
</section>
