---
import HeadBase from '../components/HeadBase.astro'
import Header from '../components/Header.astro'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <HeadBase title={title} description={description} />
  </head>
  <body>
    <Header />
    <slot />
    <!-- <div class='md:grid md:grid-cols-[70%_30%] gap-x-5'>
      <slot />
    </div> -->
    <style is:global>
      :root {
        color-scheme: dark light;
        color: white;
      }
      html {
        font-family: system-ui, sans-serif;
      }
      body {
        background: #0d1117;
        width: 90%;
        margin: 0 auto;
      }

      @media screen and (min-width: 768px) {
        body {
          width: 80%;
          margin: 0 auto;
        }
      }
    </style>
  </body>
</html>
